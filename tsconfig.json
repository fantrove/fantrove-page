{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2020", "DOM.Iterable", "WebWorker"],
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "isolatedModules": false,
    "noEmit": false
  },
  "include": ["trc/src/**/*"]
}